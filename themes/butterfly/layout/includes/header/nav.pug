nav#nav
  div#blog_name
    a#site-name(href=url_for('/')) #[=config.title]
    
  #menus
    !=partial('includes/header/menu_item', {}, {cache: true})
  
  if theme.headerButton
    #nav-right
      each value, label in theme.headerButton
        if value.enable
          .nav-button(id=`${label}-button`)
              if value.func
                a.site-page(onclick=`${value.func}()`, title=`${value.title}`, href="javascript:void(0);", rel="external nofollow" data-pjax-state="external")
                  i(class=value.icon)
                  if label === 'totop'
                    span#percent
                    span.more-text 返回顶部
              else
                a.site-page(title=`${value.title}`, href="javascript:void(0);", rel="external nofollow" data-pjax-state="external")
                  i(class=value.icon)
      #toggle-menu
        a.site-page
          i.fas.fa-bars.fa-fw   
    
      
