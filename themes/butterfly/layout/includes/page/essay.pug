#bber
  section.timeline.page-1
    ul#waterfall.list
      each i in site.data.essay
        each item, index in i.essay_list
          if index < 30
            li.item
              .bber-content
                p.datacont= item.content
                if item.image
                  a.bber-content-img(href=item.image, target="_blank", data-fancybox="images")
                    img(src=item.image)
              if item.music
                .bber-music
                  meting-js(theme="var(--card-bg)", id=item.music.id ? item.music.id : '60198', server=item.music.server ? item.music.server : 'tencent', type=item.music.type ? item.music.type : 'song', data-lrctype="0")
              div.hr 
              .bber-bottom
                .bber-info
                  .bber-info-time
                    i.fas.fa-calendar-days
                    time.datatime(datetime= item.date)= item.date
                  if item.link
                    a.bber-content-link(href=item.link, target="_blank", title="跳转到短文指引的链接")
                      i.fa.fa-link
                      ='链接'
                - var __type = item.image ? '图片' : item.music ? '音乐' : ''
                - var __text = item.content + __type
                //- a.bber-reply(data-pjax-state, onclick="rm.rightMenuCommentText(+ __text +);", )
                //-   i.fa.fa-solid.fa-message
                      
