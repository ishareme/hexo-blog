if hexo-config('preloader.enable') && hexo-config('preloader.source') == 1
  .loading-bg
    position: fixed
    z-index: 1001
    width: 50%
    height: 100%
    // background-color: rgba(0,0,0,.85)
    opacity: 1
    transition: 0.3s
    pointer-events: all
    // backdrop-filter: saturate(180%) blur(20px)
    // -webkit-backdrop-filter: blur(20px)

  #loading-box
    backdrop-filter: saturate(180%) blur(20px)
    -webkit-backdrop-filter: blur(20px)
    position: fixed
    z-index: 1000
    width: 100%
    height: 100%
    background-color: rgba(0,0,0,0.35)
    opacity: 1
    visibility: visible
    transition: all 1s
    .loading-left-bg
      @extend .loading-bg

    .loading-right-bg
      @extend .loading-bg
      right: 0

    .loading-container
      position: fixed
      z-index: 1001
      display: flex
      justify-content: center
      align-items: center
      width: 100%
      height: 100vh
    .spinner-box
      // position: fixed
      // z-index: 1001
      // display: flex
      // justify-content: center
      // align-items: center
      // width: 100%
      // height: 100vh
      position:relative
      width:100px
      height:100px
      display:flex
      justify-content:center
      align-items:center
      .configure-circle
        position:absolute
        top:0
        left:0
        width:100%
        height:100%
        border:2px solid #fff
        position-events:none
        animation: configureCircle 5s linear infinite
        &:nth-child(1)
          border-radius:60% 40% 21% 79% / 35% 55% 45% 65%  
        &:nth-child(2)
          animation-direction:reverse
          border-radius:50% 50% 51% 49% / 68% 68% 32% 32%
        &:nth-child(3)
          animation-duration:3s
          border-radius:32% 68% 32% 68% / 43% 47% 53% 57%
      .loading-word
        color:#fff
        font-family: lato
        font-weight: 500
      

      // .configure-border-1
      //   position: absolute
